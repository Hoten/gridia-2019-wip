[Unit]
Description=Gridia server
After=network.target
StartLimitIntervalSec=0

[Service]
ExecStart=/root/.nvm/versions/node/v12.8.1/bin/node /root/gridia/gridia-2019-wip/dist/server/run-server.js \
            --ssl-cert /etc/letsencrypt/live/hoten.cc/fullchain.pem \
            --ssl-key /etc/letsencrypt/live/hoten.cc/privkey.pem \
            --verbose
Restart=always
RestartSec=1
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/root/gridia/gridia-2019-wip

[Install]
WantedBy=default.target
