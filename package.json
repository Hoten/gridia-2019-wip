{
  "dependencies": {
    "parcel-bundler": "^1.11.0",
    "pixi-sound": "^2.1.3",
    "pixi.js": "^4.8.5",
    "source-map-support": "^0.5.12",
    "ws": "*",
    "yargs": "^13.2.2"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "yarn build-client && yarn build-server",
    "build-client": "parcel build src/client/main.ts -d dist/client -o gridia.js --public-url . && cp index.html dist/client && cp -r world dist/client",
    "build-server": "tsc --outDir dist/server && cp -r world dist/world",
    "convert": "src/convert-rpgwo/convert.sh",
    "run-server": "node -r source-map-support/register ./dist/server/run-server.js",
    "clean": "rm -rf dist",
    "watch": "parcel src/client/main.ts -d dist -o gridia.js --public-url . & nodemon",
    "type-check": "tsc --noEmit",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'",
    "test": "yarn lint && yarn type-check && jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/pixi.js": "^4.8.6",
    "@types/ws": "^6.0.1",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.1",
    "tslint": "^5.16.0",
    "typescript": "^3.3.1"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
