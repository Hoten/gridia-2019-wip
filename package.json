{
  "dependencies": {
    "@pixi/filter-outline": "^2.7.0",
    "parcel-bundler": "^1.11.0",
    "pixi-scrollbox": "^1.6.1",
    "pixi-sound": "^2.1.3",
    "pixi-viewport": "^4.0.1",
    "pixi.js": "^4.8.5",
    "source-map-support": "^0.5.12",
    "ws": "*",
    "yargs": "^13.2.2"
  },
  "engines": {
    "node": ">=10"
  },
  "engineStrict": true,
  "scripts": {
    "build": "yarn build-client && yarn build-server",
    "build-client": "tsc --outDir dist/server && node build/build-client.js",
    "build-server": "node build/build-server.js",
    "convert": "src/convert-rpgwo/convert.sh",
    "run-server": "node -r source-map-support/register ./dist/server/run-server.js",
    "clean": "rimraf dist",
    "watch": "parcel src/client/index.html -d dist/client --public-url . & nodemon",
    "type-check": "tsc --noEmit",
    "lint": "tslint -c tslint.json '{src,test,build}/**/*.{ts,js}'",
    "test": "yarn lint && yarn type-check && jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/pixi.js": "^4.8.6",
    "@types/ws": "^6.0.1",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.1",
    "tslint": "^5.16.0",
    "typescript": "^3.3.1"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
