{
  "name": "webgl-learn",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "parcel-bundler": "^1.11.0",
    "pixi.js": "^4.8.5",
    "ws": "*"
  },
  "engines" : { "node" : ">=10" },
  "scripts": {
    "build": "yarn build-client && yarn build-ts",
    "build-client": "parcel build src/client/main.ts -d dist -o gridia.js --public-url .",
    "build-ts": "tsc --outDir dist",
    "run-server": "node ./dist/server/run-server.js",
    "clean": "rm -rf dist",
    "watch": "parcel src/client/main.ts -d dist -o gridia.js --public-url . & yarn build-ts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/pixi.js": "^4.8.6",
    "@types/ws": "^6.0.1",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.3.1"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
